@model RoleEditViewModel

@{
    ViewBag.Title = "Edit role";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" asp-controller="Role" method="post">

    <ul id="validationSummary" class="alert alert-danger hidden"></ul>

    <div class="form-group">
        <h4>Name</h4>
        <input asp-for="Name" class="form-control" />
    </div>

    @await Html.PartialAsync("_AllowedSections", Model.AvailableSections)

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-warning">Submit</button>
    <a asp-action="Roles" asp-controller="Admin" class="btn btn-danger">Cancel</a>
</form>